{
  "name": "HPM 883 Lab Environment",
  "image": "ghcr.io/hpm-883-course/lab-1-template-v2:latest",
  "containerEnv": {
    "RENV_PATHS_CACHE": "/home/rstudio/.cache/R/renv"
  },
  "postCreateCommand": "R -e 'renv::restore(prompt = FALSE)'",
  "customizations": {
    "codespaces": {
      "openFiles": ["lab-1-design.qmd"]
    },
    "vscode": {
      "extensions": [
        "quarto.quarto",
        "reditorsupport.r"
      ]
    }
  },
  "forwardPorts": [8787],
  "portsAttributes": {
    "8787": {
      "label": "RStudio Server",
      "onAutoForward": "notify"
    }
  }
}
